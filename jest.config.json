{
  "testMatch": [
    "**/specs/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[tj]s?(x)"
  ],
  "transformIgnorePatterns": [
    "/node_modules/",
    "\\.pnp\\.[^\\\/]+$"
  ],
  "reporters": [
    "default",
    [
      "jest-html-reporters",
      {
        "pageTitle": "API Test Report",
        "publicPath": "testReport/jestApiTestReport.html",
        "includeFailureMsg": true,
        "openReport": false
      }
    ]
  ]
}